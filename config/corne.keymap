#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
// #include <dt-bindings/zmk/backlight.h>

#define BASE   0
#define BUTTON 1
#define NAV    2
#define FUN    3
#define MEDIA  4
#define NUM    5
#define SYM    6
#define MOUSE  7


/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  F  |  P  |  B  |   |  J  |  L   |  U  |  Y  |  ;  | BKSP |
// | CTRL |  A  |  R  |  S  |  T  |  G  |   |  M  |  N   |  E  |  I  |  O  |  '   |
// | SHFT |  X  |  C  |  D  |  V  |  Z  |   |  K  |  H   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | BKSP  | ALT |
                        bindings = <
   &mo 1       &kp Q      &kp W       &kp E          &kp R        &kp T           &kp Y   &kp U   &kp I     &kp O   &kp P       &mo 2
   &kp LPAR   &hm LGUI A  &hm LALT S  &hm LCTRL D    &hm LSHFT F  &kp G           &kp H   &kp J   &kp K     &kp L   &kp SEMI    &bl BL_SET 50
   &kp RALT(I)  &kp Z     &kp X       &kp C          &kp V        &kp B           &kp N   &kp M   &kp COMMA &kp DOT &kp FSLH    &bl BL_INC  
                                      &lt BUTTON ESC &lt NAV SPC  &lt NAV TAB     &kp RET &kp BSPC &kp RALT
                        >;
                };
                button_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LSHFT  &trans       &trans       &trans       &trans       &trans         &trans   &trans   &trans &trans    &trans &trans
                          	        &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
                        >;
                };

                nav_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
// &kp LCTRL &bl BL_CYCLE   &trans      &trans           &trans   &bl BL_DEC      &kp MINUS &kp EQUAL &kp LBKT        &kp RBKT &kp BSLH &kp GRAVE
// &kp LSHFT &bl BL_TOG   &bl BL_SET 10 &bl BL_SET 50   &bl BL_SET 100   &bl BL_INC      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE &kp TILDE
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp BSPC
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LSHFT  &trans       &trans       &trans       &trans       &trans         &trans   &trans   &trans &trans    &trans &trans
                    	     &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };

//               fun_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  LSHIFT  |  F9  |  F6   |  F3  |  F12  |   |    |          |        |         |  Bootloader  |   |
// | CTRL |  LCTRL   |  F8  |  F5   |  F2  |  F11  |   |    |  PRTSCN  |  SLCK  |  PAUSE  |              |   |
// | SHFT |  LALT    |  F7  |  F4   |  F1  |  F10  |   |    |          |        |         |              |   |
//                   |      |       |      |       |   |    |          |
//                        bindings = <
//&trans &kp LSHFT    &kp F9   &kp F6     &kp F3   &kp F12            &trans     &trans      &trans     &trans            &bootloader  &trans  
//&trans &kp LCTRL    &kp F8   &kp F5     &kp F2   &kp F11            &kp K_APP  &kp PSCRN   &kp SLCK   &kp PAUSE_BREAK   &kp LGUI     &trans
//&trans &kp LALT     &kp F7   &kp F4     &kp F1   &kp F10            &trans     &trans      &trans     &kp RALT          &trans       &trans
//                             &trans     &trans   &trans             &trans     &trans      &trans
//                        >;
//                };
        };
};
